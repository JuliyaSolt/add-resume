<main class="container"> 

    <div class="row"> 

        <div class="col-8 ms-0">

            <div class="mx-2">
                {{#with formBlock}}
                <h1 class="mt-5 mb-4">{{header}}</h1>

                    {{#with rating}}
                    <p>{{title}}: {{value}}</p>
                    {{/with}}  
                            
                    <div class="nav nav-tabs">
                        {{#with actionBlock}}
                            {{#each tabs}}
                                <div class="nav-item">
                                    {{#if isActive}}
                                     <a href="#" class="nav-link active">{{text}}</a>  
                                    {{else}}
                                        <a class="nav-link {{#if isDisabled}} disabled {{/if}}" href="#">{{text}}</a> 
                                    {{/if}}    
                                </div>
                            {{/each}}
                        {{/with}}        
                     </div>
                            

                    <hr class="my-5">
        
                    <div class="card col-12 p-3">
                        {{#with actionBlock.report}}
                        <p>{{title}}</p>
                            <div class="pt-2">
                                {{#with button}}
                                  <a class="btn btn-secondary" href="https://www.youtube.com/" role="button">{{text}}</a>
                                {{/with}}
                            </div>    
                        {{/with}}
                    </div>    

                    <hr class="my-5">

                    {{#with feedbackBlock}}
                    <h2>{{title}}</h2>
                        <div class="pt-4 pe-2 py-2">
                            {{#each buttons}}
                            {{#if isWarning}}<a class="btn btn-warning text-white" href="https://www.youtube.com/" role="button">{{ text}}</a>{{/if}}
                            {{#if isSuccess}}<a class="btn btn-success" href="https://www.youtube.com/" role="button">{{ text}}</a>{{/if}}
                            {{#if isDanger}}<a class="btn btn-danger" href="https://www.youtube.com/" role="button">{{ text}}</a>{{/if}}
                            {{/each}}
                        </div>
                    {{/with}}   
               {{/with}}
            </div>   
        </div>
        <div class="col-4 ms-0 mt-5">
            <div class="card mb-3 p-2">
                {{#with formBlock.goodsInfo}}
                <div class="col-3">
                <img src="{{photo}}"></img>
                </div>
                <h5 class="mt-3">{{name}}</h5>
                {{/with}}
            </div>

            <div class="card p-2">
                {{#with formBlock.goodsInfo}}
                <p><b>{{price}}</b></p>
                {{#if inMarket}} Є в наявності {{/if}}
                <div class="col-12 mt-2">
                    {{#each buttons}}
                    <p>{{#if isPrimary}}<a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>{{/if}}</p>
                    <p>{{#if isSecondary}}<a class="btn btn-secondary" href="{{link}}" role="button">{{text}}</a>{{/if}}</p>
                    {{/each}}
                 </div>
                 {{/with}}
            </div>

            <div class="card p-2 mt-3">
             {{#with formBlock.goodsInfo}}
                {{#with seller}}
                <p>{{title}}: <b>{{value}}</b></p>
                {{/with}}
             {{/with}}       
            </div>
        </div>  
    </div>

    <hr class="my-5"> 
    {{#each reviewList}}
        {{> reviewItem}}
    {{/each}}
    <div class="mt-5">
    {{> shopaction}}
    </div>                      
</main>
      