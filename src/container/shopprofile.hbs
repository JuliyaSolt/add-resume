<main class="container"> 

    <div class="row"> 

        <div class="col-12">
            <h1 class="my-2 ms-3">{{header}}</h1>
                
                <div class="mx-2">   
                {{#with purchase}} 
                        
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-item">
                        {{#if isActive}}
                            <a href="#" class="nav-link active">{{text}}</a>  
                        {{else}}
                            <a class="nav-link {{#if isDisabled}} disabled {{/if}}" href="#">{{text}}</a> 
                        {{/if}}    
                    </div>
                    {{/each}}
                </div>
                            
                <div class="mt-3">
                    <div class="row">
                        {{#with actionBlock}}
                            <div class="col-4">
                            {{#with input}}                      
                            <label class="form-label"></label>
                             <input type="text" class="form-control" value="{{placeholder}}">                      
                            {{/with}}
                            </div>

                            {{#each buttons}}
                            <div class="col-2 text-center">
                            {{#if isSuccess}}<a class="btn btn-success mt-4" href="link" role="button">{{text}}</a>{{/if}}
                            {{#if isOutline}}<a class="btn btn-outline-success  mt-4" href="link" role="button">{{text}}</a>{{/if}}
                            {{#if isDanger}}<a class="btn btn-danger mt-4" href=" link" role="button">{{text}}</a>{{/if}}
                            </div>
                            {{/each}}    
                            </div>
                        {{/with}}
                    </div>
                </div>
                       
                 <hr class="my-5">
