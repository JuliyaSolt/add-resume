<main class="m-1">
   <section>
      <div class="row m-4">
         <div class="card">
            
            {{#with navigation}}
            <h3 class=" display-5">{{Logo}}</h3>
            {{/with}}
               
               {{#each navigation.links}}    
                  <div class="nav justify-content-end">          
                     <div class="nav-item">
                        <a href={{href}} class="nav-link">{{text}}</a>       
                     </div>
               {{/each}} 
               <a href="#" class="nav-link disabled">Disabled</a>      
               </div>
               </div> 

         </div>                  
      </div>  
   
      <hr class="my-5">    
      <div class="col-12">
         {{#with newsBlock}}
         <p class="display-6 text-center">{{title}}</p>
        <div class="row g-3 my-2"> 
						{{#each cards}}
							<div class="col-3 pb-1">
                           <div class="card text-bg-dark text-white">
								      <div class="card-header">{{title}}
                              {{#if isNew}} <span class="badge rounded-pill text-bg-success">isNew{{/if}}</span>
                              {{#if isTop}} <span class="badge rounded-pill text-bg-danger">isTop{{/if}}</span>
								       </div>   
                                 <div class="card-body">   
								          <p>{{description}}</p>   
                                 </div>  
						            </div>
                           </div>
						{{/each}}			 
					     </div>  
         {{/with}}
         </div> 

          <hr class="my-5">  
          {{#with goodsBlock}} 
          <div class="col-12">
            <div class="row g-4">
                <div class="nav nav-tabs">
                {{#each tabs}}
                  <div class="nav-item">
                  {{#if isActive}}
                     <a href="#" class="nav-link active">{{text}}</a>  
                  {{else}}
                      <a class="nav-link {{#if isDisabled}} disabled {{/if}}" href="#">{{text}}</a> 
                   {{/if}}    
               </div>
               {{/each}}
               </div>
            </div>
          </div>
          {{/with}}
         
         <div class="col-12 m-2">
            <div class="row mt-2">
					{{#each goodsBlock.cards}}
						<div class="col-4 gx-3 gy-3"> 
							<div class="card">
							<img class="card-img-top" src={{image}}>
								<div class="card-body">
								<h5 class="card-title">{{title}}
                        {{#if isHot}} 
                        <span class="badge rounded-pill text-bg-warning text-uppercase">Hot!{{/if}}</span> 
                        {{#if isNew}}
                        <span class="badge rounded-pill text-bg-primary">New
                        {{/if}}</span> 
                        </h5>
								   <div class="card-text">{{description}}</div>					
							  </div> 
							</div>  
						</div> 
					{{/each}}
				</div>
         </div>
         <hr class="my-5">  
         <div class="col-12 my-2">
            <div class="row gy-3 gx-3">
               <div class="card text-bg-dark">
               {{#with subscribe}}
               <h2>{{header}}</h2>
               <p class="pb-4">{{description}}</p>
               
               
               <div class="text-end pe-2 pb-3">
               {{#each buttons}}
               <a href={{link}} class="btn btn-primary text-bg-primary m-2 ms-4">{{text}}</span></a>
               {{/each}}
               {{/with}}
               </div>
               </div>
            </div>
         </div>
         <hr class="my-5"> 
         {{#with service}}
         <div class="card text-bg-success">
                <div class="card-body text-center">   
                  <h2 class="card-title text-center">{{title}}</h2>
                  <p>{{description}}</p>
               </div>
               <div class="text-center pb-3">
               {{#each buttons}}
               <a href={{link}} class="btn text-bg-primary">{{text}}</a>
               </div>
               {{/each}}
            {{/with}}  
         </div>  
         <hr class="my-5">
         {{#each footer}}
         <div class="nav col-2">
            <div class="m-3">
               {{#each this}}
               <div>
                  <a class="nav-link {{#if @last}} disabled {{/if}}"
                  href={{this.link}}>{{this.text}}</a>  
               </div>
               {{/each}}
            </div>
         </div>
         {{/each}}
   </section>  
</main>
   